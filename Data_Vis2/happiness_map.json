{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 300,
    "config": {
      "background":"#FFF3E2",
      "view": {"stroke": "transparent"}
    },
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/thuytienpham17/FIT3179/main/Data%20Visualization%202/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#a4e7ff"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/thuytienpham17/FIT3179/main/Data%20Visualization%202/ne_110m_graticules_30.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}},
        "transform": [
          {
          "lookup": "properties.NAME",
          "from": {
            "data": {
            "url": "https://raw.githubusercontent.com/thuytienpham17/FIT3179/main/Data%20Visualization%202/data/dataset2023.csv"
            },
            "key": "Country Name",
            "fields": ["Ladder Score"]
            }
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Ladder Score",
            "type": "quantitative",
            "scale":{
            "domain": [1.0, 8.0],
            "range": ["#FFC3C3", "#E21818"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title":
            "Country"},
            {"field": "Ladder Score", "type": "quantitative", "title": "Happiness Score"}
          ]
      }
      }
    ]
}
    