{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/thuytienpham17/FIT3179/main/Data_Vis2/dataset2023.csv"
  },
  "width": 400,
  "height": 300,
  "config": {
    "background":"#FFECF1",
    "view": {"stroke": "transparent"},
    "axis": {"grid": false},
    "axisX": {"titleFontSize": 13}, 
      "axisY": {"titleFontSize": 13},
      "legend": {
        "titleFontSize": 13, 
        "labelFontSize": 12.5
      }
    },
    "title": {
      "text": "GDP per Capita vs. Happiness",
      "fontSize": 20,
      "offset": 25
    },
  "selection": {
      "region_highlight": {
      "type": "multi",
      "fields": ["Regional Indicator"],
      "bind": "legend"
      }
    },
  "mark": "circle",
  "encoding": {
    "y": {
    "field": "Ladder Score",
    "type": "quantitative",
    "title": "Happiness Score"
    },
    "x": {
    "field": "Explained By Logged GDP Per Capita",
    "type": "quantitative",
    "title": "GDP per Capita"
    },
    "color": {
      "field": "Regional Indicator"
    },
    "opacity": {
      "condition": {"selection": "region_highlight", "value": 1},
      "value": 0.1
      },
  "tooltip": [
          {"field": "Country Name", "type": "nominal", "title":"Country"},
          {"field": "Ladder Score", "type": "quantitative", "title": "Happiness Score"}
        ]
  }
}