{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/thuytienpham17/FIT3179/main/Data_Vis2/dataset2023.csv"
    },
    "width": 350,
    "height": 350,
    "config": {
      "background":"#FFF3E2",
      "view": {"stroke": "transparent"},
      "axis": {"grid": false}
    },
    "title": "Perception of Corruption vs. Happiness",
    "selection": {
      "region_highlight": {
        "type": "multi",
        "fields": ["Regional Indicator"],
        "bind": "legend"
        }
      },
    "mark": "circle",
    "encoding": {
      "y": {
      "field": "Ladder Score",
      "type": "quantitative",
      "title": "Happiness Score"
      },
      "x": {
      "field": "Explained By Perceptions Of Corruption",
      "type": "quantitative",
      "title": "Perception of Corruption"
      },
      "color": {
        "field": "Regional Indicator"
      },
      "opacity": {
        "condition": {"selection": "region_highlight", "value": 1},
        "value": 0.1
        },
    "tooltip": [
            {"field": "Country Name", "type": "nominal", "title":"Country"},
            {"field": "Ladder Score", "type": "quantitative", "title": "Happiness Score"}
          ]
    }
}